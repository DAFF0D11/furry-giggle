#!/usr/bin/env zsh
#title           : dmenu_shutdown
#description     : A simple dmenu call to logout, hibernate, shutdown, sleep, or restart
#author          : Arne KÃ¼derle
#date            : 201602
#notes           : Install dmenu to use this script. For the best experience create a hotkey

actions=("sleep\nrest\nshut\nlock\nhiber")
action=$(echo -e $actions | dmenu -i -c -g 5 -l 1 -p '>')
case "$action" in
    lock) slock ;;
    rest) systemctl reboot ;;
    shut) systemctl poweroff ;;
    sleep) systemctl suspend ;;
    hiber) systemctl hibernate ;;
esac
