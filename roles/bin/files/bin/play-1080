#!/usr/bin/env zsh
CLIP=$(xclip -sel clip -o)

plaympv(){
 2>/dev/null 1>&2  mpv --x11-name=video-player --ytdl-format="bestvideo[height=?1080]+bestaudio/best" "$CLIP"
}

case $CLIP in
    *twitch.tv*)plaympv;;
    *youtube.com*)plaympv;;
    *vid.puffyan.us*)echo puff;plaympv;;
    *)echo not playable; notify-send "not playable";;
esac
